<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:id="@+id/record_b"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="0dp"
        android:text="start"/>
    <Button
        android:id="@+id/stop_b"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="stop"
        android:layout_below="@id/record_b"/>
    <Button
        android:id="@+id/play_b"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="play"
        android:layout_below="@id/stop_b"/>
    <Button
        android:id="@+id/delete_b"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="delete"
        android:layout_below="@id/play_b"/>
    <TextView
        android:id="@+id/text1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/delete_b"/>

    <ListView
        android:id="@+id/listview1"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_below="@id/text1"/>

</RelativeLayout>
