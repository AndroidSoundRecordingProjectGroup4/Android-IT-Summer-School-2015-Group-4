<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp" tools:context=".MainActivity">
        <ImageButton
            android:id="@+id/start_img_b"
            android:layout_height="200dp"
            android:layout_width="200dp"
            android:background="@drawable/start_b_img"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:onClick="start_record_b"/>
        <Chronometer
            android:id="@+id/timer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@id/start_img_b"
            android:layout_centerHorizontal="true"
            android:textSize="50dp"
            />
        <RelativeLayout
            android:id="@+id/r2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/timer_text"
            android:layout_alignParentBottom="true">
            <ImageButton
                android:id="@+id/cancel_b"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:layout_marginLeft="70dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40dp"
                android:background="@drawable/cancel_button"
                android:onClick="cancel_record_b"/>
            <ImageButton
                android:id="@+id/stop_b"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40dp"
                android:background="@drawable/save_button"
                android:layout_alignParentRight="true"
                android:layout_marginRight="70dp"
                android:text="stop"
                android:onClick="stop_record_b"/>

            <Button
                android:id="@+id/delete_b"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="delete"
                android:layout_below="@id/stop_b"
                android:onClick="delete_record_b"
                android:visibility="gone"/>
            <!--<Button-->
                <!--android:id="@+id/list_b"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:text="list"-->
                <!--android:layout_below="@id/stop_b"-->
                <!--android:layout_toRightOf="@id/delete_b"-->
                <!--android:onClick="show_list_b"/>-->
            <TextView
                android:id="@+id/tips"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/delete_b"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

    </RelativeLayout>
    <!--Left-->
    <RelativeLayout
        android:id="@+id/main_left_drawer_layout"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:paddingTop="50dp">
        <Button
            android:id="@+id/left_setname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Record Name"
            android:textSize="16sp"
            android:onClick="left_set_name"/>
        <Button
            android:id="@+id/left_addtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/left_setname"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:text="Add Time For Record Or Not"
            android:onClick="left_add_time"/>
        <Button
            android:id="@+id/left_setlocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Save Location"
            android:textSize="16sp"
            android:layout_below="@id/left_addtime"
            android:layout_marginTop="15dp"
            android:onClick="set_save_location"/>
    </RelativeLayout>
    <!--Right-->
    <RelativeLayout
        android:id="@+id/main_right_drawer_layout"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@android:color/transparent"
        android:paddingTop="50dp" >
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>