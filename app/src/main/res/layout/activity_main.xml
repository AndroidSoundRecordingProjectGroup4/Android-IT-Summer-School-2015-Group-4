<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">
    <ImageButton
        android:id="@+id/start_img_b"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:background="@drawable/start_b_img"
        android:layout_centerHorizontal="true"
        android:onClick="start_record_b"/>
    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_img_b">
        <Button
            android:id="@+id/record_b"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="0dp"
            android:text="start"/>
        <Button
            android:id="@+id/stop_b"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="stop"
            android:layout_toRightOf="@id/record_b"
            android:onClick="stop_record_b"/>
        <Button
            android:id="@+id/play_b"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="play"
            android:layout_toRightOf="@id/stop_b"/>
        <Button
            android:id="@+id/delete_b"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="delete"
            android:layout_toRightOf="@id/play_b"/>
        <TextView
            android:id="@+id/text1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/delete_b"/>
        <Button
            android:id="@+id/play_b_test"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="play_test"
            android:layout_below="@id/text1"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/listview1"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_below="@id/r2"/>

</RelativeLayout>
